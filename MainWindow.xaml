<Window x:Class="RandomUserGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="552">
    <Grid Margin="0,0,-8,-21">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF9B9BD8" Offset="1"/>
                <GradientStop Color="#FF4D4D6B" Offset="1"/>
                <GradientStop Color="#FF4F80E8" Offset="0.404"/>
                <GradientStop Color="#FF4F80E8" Offset="0.306"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="TitleLB" Content="Random User Generator:" HorizontalAlignment="Left" Margin="136,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="GenerateUserBT" Content="Button" HorizontalAlignment="Left" Margin="214,110,0,0" VerticalAlignment="Top" Width="100" Height="67" Click="GenerateUserBT_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF6BA3E6" Offset="0.549"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
